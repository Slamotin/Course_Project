<Window x:Class="Interactive_Sort.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000"
		WindowStartupLocation="CenterScreen"
        Closed="Window_Closed"
        Closing="Window_Closing"
        >


    <Canvas x:Name="canvas1" SizeChanged="Canvas1_SizeChanged" Grid.ColumnSpan="3">
        <Grid Width="250" HorizontalAlignment="Left" Margin="5">
            <Grid.ColumnDefinitions >
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label x:Name="label0" Grid.Column="0" Grid.Row="0" Content="Number of iterations: "/>
            <Label x:Name="label1" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Content="0"/>
            <Label x:Name="label2" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Content="Number of shifts: "/>
            <Label x:Name="label3" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Content="0"/>
        </Grid>

        <Grid Canvas.Top="358">
            <Grid.ColumnDefinitions >
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition Width="130"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
			<Button x:Name="button0" Content="Build Random Rainbow" Grid.Column="1" Grid.Row="0" MaxHeight="300" Canvas.Left="5" Canvas.Top="358"
                BorderThickness="0" Background="White" Click="Button0_Click">
			</Button>
			<Button x:Name="button1" Content="Start" Grid.Column="1" Grid.Row="1" MaxHeight="300" Canvas.Left="5" Canvas.Top="358"
                BorderThickness="0" Background="White" IsEnabled="False" Click="button1_Click">
			</Button>
			<Label Content="Выбор сортировки: " Grid.Column="2" VerticalContentAlignment="Center"/>
            <ComboBox x:Name="comboBox1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="22" Margin="0,8" Width="87">
                <ComboBoxItem IsSelected="True">InsertSort</ComboBoxItem>
                <ComboBoxItem IsSelected="True">BubbleSort</ComboBoxItem>
				<ComboBoxItem IsSelected="True">ShakerSort</ComboBoxItem>
            </ComboBox>
            
            <Label x:Name="label5" Grid.Row="2" Content="" />
            <TextBlock x:Name="CreateDelayTextBlock" Grid.Column="2" TextWrapping="Wrap" 
                       Text="Задержка создания радуги " HorizontalAlignment="Left" Width="122" 
                       Margin="6,36,0,28" Grid.RowSpan="3" RenderTransformOrigin="0.505,0.625"  />
            <TextBlock x:Name="SortingDelayTextBlock" Grid.Row="2" Grid.Column="2" TextWrapping="Wrap" 
                       Text="Задержка сортировки" VerticalAlignment="Center"  Margin="6,0,0,0"/>
            <TextBox x:Name="CreateDelayText" Grid.Row="1" Grid.Column="3" Text="20" 
                     TextChanged="CreateDelayText_TextChanged" Margin="0,5,0,4"/>
            <TextBox x:Name="SortingDelayText" Grid.Row="2" Grid.Column="3" Text="1" 
                     TextChanged="SortingDelayText_TextChanged" Margin="0,5,0,4"/>
            <TextBlock Grid.Row="0" Grid.Column="4" Text="  Creating Size:  "  
                       VerticalAlignment="Center" Height="16" Margin="0,10,0,12"/>
            <TextBox x:Name="CreatingSize" Grid.Row="0" Grid.Column="5" Text="65" 
                     TextChanged="CreatingSize_TextChanged"  Margin="0,8,0,9"/>
        </Grid>
    </Canvas>

</Window>
